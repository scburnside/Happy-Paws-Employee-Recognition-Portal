<% include partials/header %>

<h5 class="page-subtitle text-center">SIGN IN</h1>
<br>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-5">
            <div class="card-body">
                <%- messages('message', locals) %>
                <form action="/login" method="POST">
                    <div>
                        <label>Username or Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="isAdmin" value="true" id="adminCheck">
                        <label class="form-check-label" for="adminCheck">
                            Sign in as Admin
                        </label>
                    </div>
                    <br>
                    <button class="btn btn-custom1 btn-block" type="submit" value="submit">Sign In</button>
                </form>
            </div>
            <div class="card-footer">
                <a href="/forgotpw">Forgot password?</a><br>
                <a href="/register">New User? Create an account.</a>
            </div>
        </div>
    </div>
</div>



<% include partials/footer %>