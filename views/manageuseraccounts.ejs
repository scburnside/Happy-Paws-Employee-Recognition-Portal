<% include partials/header %>
<%- messages('message', locals) %>
<% include partials/errorHandler %>

<head>
    <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    </style>
</head>

<h1>Happy Paws Employee Portal</h1><br>

<h4>Manage User Accounts</h4><br>

<table style="width:100%">
    <tr>
        <th>User Id</th>
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Email</th> 
        <th>Account Created On:</th>
        <th>Title</th>
        <th>Department</th> 
        <th>Edit</th>
        <th>Delete</th>
    </tr>
<% users.forEach(function(user)  { %>
    <tr>
        <td><%= user.userId %></td>
        <td><%= user.fName %></td>
        <td><%= user.lName %> </td>
        <td><%= user.email %></td>
        <td><%= user.createdAt %></td>
        <td><%= user.title %></td>
        <td><%= user.department %> </td>
        <td><button onclick="location.href='/users/admin/edituseraccount/<%= user.userId %>'">Edit</button></td>
        <td><button onclick='deleteUser("<%= user.userId %>")'>Delete</button></td>
    </tr>
<% }) %>
</table>
<br>
<br>

    <a class="btn btn-info btn-lg" href="/users/admin/createuseraccount" role="button">Create New User Account</a>

