<% include partials/header %>

<h5 class="page-subtitle text-center">FORGOT PASSWORD?</h1>
    <br>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-5">
                <div class="card-body">
                    <%- messages('message', locals) %>
                    <form action="/forgotpw" method="POST">
                        <div>
                            <label>Enter your Username or Email to find your account</label>
                            <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isAdmin" value="true" id="adminCheck">
                            <label class="form-check-label" for="adminCheck">
                              I am an admin
                            </label>
                        </div>
                        <br>
                        <button class="btn btn-dark" type="submit" value="submit">Submit</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="/login">Back to Login</a><br>
                </div>
            </div>
        </div>
    </div>

<% include partials/footer %>