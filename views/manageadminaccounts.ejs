<% include partials/header %>
<%- messages('message', locals) %>
<% include partials/errorHandler %>

<head>
        <style>
        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
        }
        </style>
    </head>

<h1>Happy Paws Employee Portal</h1><br>

<h4>Manage Admin Accounts</h4><br>

<table style="width:100%">
        <tr>
            <th>Admin Id</th>
            <th>User Name</th> 
            <th>Account Created On:</th>
            <th>Title</th>
            <th>Department</th> 
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    <% admins.forEach(function(admin)  { %>
        <tr>
            <td><%= admin.adminId %></td>
            <td><%= admin.userName %></td>
            <td><%= admin.createdAt %></td>
            <td><%= admin.title %></td>
            <td><%= admin.department %></td>
            <td><button onclick="location.href='/users/admin/editadminaccount/<%= admin.adminId %>'">Edit</button></td>
            <td><button onclick='deleteAdmin("<%= admin.adminId %>")'>Delete</button></td>
        </tr>
    <% }) %>
    </table>
    <br>

    <br>
    
        <a class="btn btn-info btn-lg" href="/users/admin/createadminaccount" role="button">Create New Admin Account</a>
    
    <br><br>

<a class="btn btn-info btn-lg" href="/users/admin/adminmenu" role="button">Back to Admin Main Menu</a><br><br>


<% include partials/footer %>