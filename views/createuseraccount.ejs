<%- messages('message', locals) %>
<% include partials/errorHandler %>

<h1>Happy Paws Employee Portal</h1>
<br>

<h4>Create A User Account</h4>
<br>

<form action="/users/admin/createuseraccount" method="POST" enctype="multipart/form-data">
    <div class="form-group row">
        <label for='fName' class='col-sm-2 col-form-label'>First Name:</label>
        <div class='col-sm-10'>
            <input class="form-control" name="fName" type="text" required>
        </div>
    </div>
    <div class="form-group row">
        <label for='lname' class='col-sm-2 col-form-label'>Last Name:</label>
        <div class='col-sm-10'>
            <input class="form-control" name="lName" type="text" required>
        </div>
    </div>
    <div class="form-group row">
        <label for='email' class='col-sm-2 col-form-label'>Email:</label>
        <div class='col-sm-10'>
            <input type="text" class="form-control" name="email" required>
        </div>
    </div>
    <button class="btn btn-custom1 btn-md" type="submit" value="submit">Submit</button>
</form>

<br>
<a class="btn btn-custom1 btn-md" href="/users/admin/manageuseraccounts" role="button">Manage User Accounts</a><br><br>

<% include partials/footer %>