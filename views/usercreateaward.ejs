<% include partials/header %>
<%- messages('message', locals) %>
<% include partials/errorHandler %>

<h1>Happy Paws Employee Portal</h1>
<br>
<h4>Create An Award</h4>
<br>
<form action="/users/useraddaward" method="POST">
    <div class="form-group row">
        <label for='awardType' class='col-sm-2 col-form-label'>Select Award:</label>
        <div class='col-sm-10'>
            <select class="form-control" name="awardType">
            <option value = "Employee of the Month">Employee of the Month</option>
            <option value = "Boss of the Month">Boss of the Month</option>
            <option value = "Janitor of the Month">Janitor of the Month</option>
            <option value = "Dog Walker of the Month">Dog Walker of the Month</option>
            <option value = "Dog Washer of the Month">Dog Washer of the Month</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
            <label for='fName' class='col-sm-2 col-form-label'>Recipient First Name:</label>
            <div class='col-sm-10'>
                <input class="form-control" name="to_fName" type="text" required>
            </div>
        </div>
    <div class="form-group row">
        <label for='lName' class='col-sm-2 col-form-label'>Recipient Last Name:</label>
        <div class='col-sm-10'>
            <input class="form-control" name="to_lName" type="text" required>
        </div>
    </div>
    <div class="form-group row">
        <label for='TOemail' class='col-sm-2 col-form-label'>Recipient Email:</label>
        <div class='col-sm-10'>
            <input type="text" class="form-control" name="to_email" required>
        </div>
    </div>
    <div class='buttons'>
        <button id="createBtn" class="btn btn-custom1 btn-md" type="submit" value="submit">Create and Email Certificate</button>
    </div>
</form>
<div class='buttons'>
    <a href="/users/usermainmenu"><button class="btn btn-custom1 btn-md">Back to Main Menu</button></a>
</div>

<% include partials/footer %>


