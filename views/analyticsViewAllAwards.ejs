        <tr>
            <th>Award Type </th>
            <th>Award Id</th>
            <th>Date Created</th>
            <th>Creator</th> 
            <th>Recipient </th>
        </tr>
    </thead>
    <tbody>
        <% awards.forEach(function(award)  { %>
            <tr>
                <td><%= award.awardType %></td>
                <td><%= award.awardId %></td>
                <td><%= award.dateCreated %></td>
                <td><%= award.fName %> <%= award.lName %> </td>
                <td><%= award.to_fName %> <%= award.to_lName %> </td>
            </tr>
        <% }) %>
